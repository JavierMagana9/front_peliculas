<%- include('template/header') %>

    <section class="col-md-6">
        <h2 class="mb-4 text-center">Registro</h2>
        <form action="/registro" method="post" name="register" id="register">
            <input type="text" id="username" name="username" placeholder="Username" class="form-control mb-2">
            <input type="text" id="email" name="email" placeholder="Email" class="form-control mb-2">
            <input type="text" id="password" name="password" placeholder="Password" class="form-control mb-2">
            <input type="text" id="password2" name="password2" placeholder="Repetir password" class="form-control mb-2">
            <% if (error) { %>

                <ul>
                    <li>
                        <%= error %>
                    </li>
                </ul>

                <% } %>

                
                    <input type="submit" value="Registrar" class="form-control btn btn-dark">
        </form>
    </section>


    <%- include('template/footer') %>